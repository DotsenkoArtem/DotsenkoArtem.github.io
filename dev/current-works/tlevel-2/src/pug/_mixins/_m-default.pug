mixin fontPreloadLinks 
    each val in fonts 
        link(rel="preload" as="font" href=`fonts/${val}.woff2` type="font/woff2" crossorigin="anonymous")





mixin intro-2(h1, imgStem, name, post)
  section.section.intro-2&attributes(attributes)
    .glow.intro-2__glow-left
    .glow.intro-2__glow-right
    

    .container.intro-2__container
      .intro-2__img
        picture
          source(srcset=`img/${imgStem}.webp`, type='image/webp')
          source(srcset=`img/mob/${imgStem}-mob.png`, media="(max-width: 480px)",type='image/png')
          source(srcset=`img/mob/${imgStem}-mob.webp`, media="(max-width: 480px)",type='image/webp')
          img(src=`img/${imgStem}.png`, alt='Человек-дезинфектор')
        .img__title
          span !{name}
          span.img__subtitle.d-block !{post}


      .intro-2__content
        .intro-2__heading
          h1 !{h1}
        .intro-2-call Выбирайте нас !

        .calc-call 
          .cash-label.calc-call__cash-label
            .cash-label__inner 
              .cash-label__title 
                span.perc 1%
                | сashback
              .cash-label__text на уборку личной  недвижимости
          .calc-call-label.
            Рассчитайте предварительную стоимость услуг в течении 15 минут и получите 1% кэшбека на уборку личной недвижимости!

        .btn.btn_primary.modal-trigger(data-target='calcModal')
            span.text_uppercase Рассчитать стоимость



mixin client190
  .client190&attributes(attributes)
    .client190__img
      picture
        source(srcset='img/cl-190-vacuum.webp', type='image/webp')
        img(src='img/cl-190-vacuum.png', alt)

    .client190__inner
      .client190-glow.client190-glow__left
      .client190-glow.client190-glow__right

      .container.client190__container
        

        .client190-card-wrap 
          .client190-card
            .client190-card__label 
              picture
                source(srcset='img/cl-190-label.webp', type='image/webp')
                img(src='img/cl-190-label.png', alt)

            .client190-digit.clip-text 190+
            .client190-card-text Опытных клинеров готовы к работе
          
        .client190-list-wrap
          ul.client190-list
            li  14 лет безупречной работы и чистой репутации
            li 100 000 м2 административных и офисных помещений убрано нашей компанией
            li от 35 до 65 руб./м2 - средняя стоимость уборки наших объектов, в зависимости от объема, графика и сложности работ




