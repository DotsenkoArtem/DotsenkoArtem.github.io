//- TOP MENU BY PAGES - 1 level
mixin topMenuByPages
  nav.menu
    ul(style="display: flex; justify-content: center; font-size: 2.5rem;")
      each menuItem, key in pages
        li.menu__item(class= (menuItem.name == page.name) ? 'menu__item_current': '', style="margin: 1rem;")
          a(href= `${key}.html`)= menuItem.name
          
          
//- TOP MENU - 1 level

mixin menu(menuClass)
  nav
    ul(class = menuClass).menu_underlined
      each menuItem, key in topMenu
        li(class = `${menuClass}__item js-menu-item`)
          a(href= `#${key}`)= menuItem.name