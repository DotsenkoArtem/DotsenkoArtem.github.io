//- TOP MENU - 1 level
mixin topMenu 
    nav.menu
        ul(style="display: flex; justify-content: center; font-size: 2.5rem;")
            each menuItem, key in pages
                li.menu__item(class= (menuItem.name == page.name) ? 'red': '', style="margin: 1rem;")
                    a(href= `${key}.html`)= menuItem.name

    section.section
        .container
            h1(style="text-align: center; font-size: 45px;") Страница "#{page.name}"!